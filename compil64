# Compile the LLR source files for X86_64 architecture

D = ./linux64llr

CC = gcc
CFLAGS = -I. -I./gwnum -DX86_64 -O2 -march=i486 -malign-double

CPP = g++
CPPFLAGS = -I. -I./gwnum -DX86_64 -O2 -march=i486 -malign-double

COMPOBJS = lprime.o lmenu.o

compile: $(COMPOBJS)
	mv $(COMPOBJS) $(D)

.c.o:
	$(CC) $(CFLAGS) -c $<

.cpp.o:
	$(CPP) $(CPPFLAGS) -c $<
